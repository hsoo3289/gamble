<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team3.gamble.mybatis.anonyboard">

	<resultMap id="AnonyBoard" type="AnonyBoard">
		<result property="seq"			column="SEQ" />
		<result property="subject" 		column="SUBJECT" />
		<result property="content"		column="CONTENT" />
		<result property="name" 		column="NAME" />
		<result property="pwd" 			column="PWD" />
		<result property="view_conunt" 	column="VIEW_COUNT" />
		<result property="like_conunt" 	column="LIKE_COUNT" />
		<result property="cdate" 		column="CDATE" />
		<result property="rdate" 		column="RDATE" />
		<result property="parent_seq" 	column="PARENT_SEQ" />

	</resultMap>

	<select id="list" resultType="AnonyBoard">
		select * from ${dbName}
		order by SEQ
	</select>

	<select id="item" resultType="AnonyBoard">
		select * from ${dbName}
		where SEQ=#{seq}
	</select>

	<select id="nextseq" parameterType="AnonyBoard" resultType="long">
		select
		${dbName}_SEQ.NEXTVAL from DUAL
	</select>

	<insert id="insert" parameterType="AnonyBoard">
		insert into ${dbName}(SEQ, SUBJECT, CONTENT, NAME, PWD
		<if test="parent_seq neq null">,PARENT_SEQ</if>
		)
		values(#{seq}, #{subject}, #{content}, #{name}, #{pwd}
		<if test="parent_seq neq null">,#{parent_seq}</if>
		)
	</insert>

	<update id="update" parameterType="AnonyBoard">
		update
		${dbName}
		set
		SUBJECT=#{subject}, CONTENT=#{content}, RDATE=SYSDATE
	</update>

	<delete id="delete" parameterType="AnonyBoard">
		delete from ${dbName}
		where SEQ= #{seq}
	</delete>

</mapper>